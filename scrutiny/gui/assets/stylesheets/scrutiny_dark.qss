QLineEdit[state="error"]{
    background-color:#904040;
    color: #ffffff;
}

QLineEdit[state="success"]{
    background-color:#409040;
    color:#ffffff;
}

QLabel[state="error"]{
    color:#ff0000;
}

QSpinBox[state="error"]{
    background-color:#904040;
    color: #ffffff;
}

QStatusBar{
    border-top: 1px outset grey;
}

QLabel[feature_enable=true] {
    color:#006100;
}

QLabel[feature_enable=false] {
    color: #9c0006;
}

QSplitter::handle {
    background-color: #ccc;
}

QLineEditIconButton:hover {
     background: grey;
}
